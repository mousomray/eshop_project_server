<!DOCTYPE html>
<html lang="en">
  <%- include('../common/head.ejs')%>
  <body id="page-top" style="background: linear-gradient(135deg, #667eea, #764ba2); color: white; font-family: Arial, sans-serif;">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../common/sidebar.ejs')%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('../common/navbar.ejs')%>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div class="text-center mb-4">
              <a
                href="<%= generateUrl('addbanner')%>"
                class="btn btn-primary btn-lg shadow"
              >‚ûï Add Banner</a>
            </div>

            <% if (sucess && sucess != '') { %>
            <div class="alert alert-success text-center"> <%= sucess %> </div>
            <% } else if (err && err != '') { %>
            <div class="alert alert-danger text-center"> <%= err %> </div>
            <% } %>

            <!-- DataTales Example -->
            <div class="card shadow-lg border-0">
              <div class="card-header bg-primary text-white text-center">
                <h5 class="m-0 font-weight-bold">üì¢ Total Banners: <%=banners.length%></h5>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover text-center" id="dataTable" width="100%" cellspacing="0">
                    <thead class="bg-dark text-white">
                      <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Subtitle</th>
                        <th>Edit</th>
                        <th>Delete</th>
                      </tr>
                    </thead>
                    <tbody class="bg-light">
                      <% banners.slice(0,banners.length).reverse().forEach((value)=>{ %>
                      <tr>
                        <td>
                          <img src="http://localhost:3004/<%=value.image%>" alt="" class="rounded" style="height: 80px; width: 80px; border: 2px solid #007bff;"/>
                        </td>
                        <td><b class="text-primary"><%=value.title%></b></td>
                        <td><i class="text-muted"><%=value.subtitle%></i></td>
                        <td>
                          <a href="<%= generateUrl('editbanner', { id: value._id }) %>" class="btn btn-success btn-sm shadow">‚úèÔ∏è Edit</a>
                        </td>
                        <td>
                          <a href="<%= generateUrl('deletebanner', { id: value._id }) %>" class="btn btn-danger btn-sm shadow">üóëÔ∏è Delete</a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../common/footer.ejs')%>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('../common/logoutModal.ejs')%>

    <!-- JS file area-->
    <%- include('../common/vanilajs.ejs')%>
  </body>
</html>
